<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">48dp</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:homeAsUpIndicator">@drawable/cha</item>
        <item name="android:titleTextStyle">@style/titlestyle</item>

    </style>

    <style name="titlestyle">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 所有textview Button 基样式 -->
    <style name="BaseTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
</resources>
