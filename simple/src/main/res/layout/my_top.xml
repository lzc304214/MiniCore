<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@android:color/white" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_user" />

    <ImageButton
        android:id="@+id/checkin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@null"
        android:src="@drawable/btn_checkin" />

    <ImageButton
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@null"
        android:src="@drawable/ic_setting" />

    <TextView
        android:id="@+id/username_tv"
        style="@style/BaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="欢迎你，xxx"
        android:textColor="#FAFAFA"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/userphoto_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/username_tv"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_address_stroke"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/defaultphoto" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userphoto_iv"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/credits_tv"
            style="@style/BaseTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="积分"
            android:textColor="#999999"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:background="#CFCFCF" />

        <TextView
            android:id="@+id/order_num_tv"
            style="@style/BaseTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单"
            android:textColor="#999999"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>